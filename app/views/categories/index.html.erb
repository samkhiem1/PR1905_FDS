<% provide(:title, "Categories") %>
<h1 style="text-align: center;"> Danh Mục thể loại </h1>
<div class="form-category">
  <table>
    <% @categories.each_slice(4) do |group_categories| %>
      <tr>
        <% group_categories.each do |category| %>
          <td>
            <div class="card-document", style="text-align: center; padding-top: 3px">
              <h2 class="card-title card-text", style="text-align: center;">
                <%= link_to category.name, category_path(category) %>
              </h2>
              <span class="badge" style="margin: inherit;">
                <%= category.documents.count %>
              </span>
            </div>
          </td>
        <% end %>
      </tr>
    <% end %>
  </table>
</div>
