<% provide(:title, "Categories") %>
<h1 style="text-align: center; color: blue"> Thể Loại  </h1>
<div class="form-category">
  <%= link_to "Thêm thể loại", new_admins_category_path, class: "btn btn-primary"%>
  <table>
    <% @categories.each_slice(4) do |group_categories| %>
    <tr>
      <% group_categories.each do |category| %>
      <td>
        <div class="card-document">
          <h2 class="card-title card-text">
            <%= link_to category.name, admins_category_path(category) %>
          </h2>
            <span class="badge" style="margin: inherit;">
              <%= category.documents.count %>
            </span>
            <div style="padding: 10px">
          <%= link_to "edit category", edit_admins_category_path(category.id), class: "btn btn-primary"%>
          <%= link_to "delete", admins_category_path(category), method: :delete, data: { confirm: "You sure?"}, class: "btn btn-danger" %>
        </div>
        </div>
      </td>
      <% end %>
    </tr>
    <% end %>
  </table>
</div>

